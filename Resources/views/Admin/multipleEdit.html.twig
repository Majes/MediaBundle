{% extends context == 'full' ? 'MajesCoreBundle::layout.html.twig' : 'MajesCoreBundle::ajax.html.twig' %}

{% block title %}MajesCore - Roles{% endblock %}

{% block content_header '' %}

{% block content %}
<div class="container-fluid main-content">
	
	{% if context == 'full' %}
	{{ include(
                'MajesCoreBundle:common:breadcrumbs.html.twig'
            ) }}
    {% endif %}

    <div class="page-title">
      <h1>{{pageTitle}}</h1>
    </div>

    <div class="row">
		<div class="col-lg-12">
	    	<div class="widget-container fluid-height clearfix">

	    		<div class="heading">
	        		<i class="icon-user"></i> {{pageSubTitle}}
	        	</div>
	
			      		<div class="page-title">
				          <h1>
				            Dropzone File Upload
				          </h1>
				        </div>
				        <div class="row">
				          <div class="col-lg-12">
				            <div class="widget-container fluid-height clearfix">
				              <div class="widget-content padded">
				                <div class="alert alert-info">
				                  <p>
				                    DropzoneJS is an open source library that provides drag 'n' drop file uploads with image previews.
				                  </p>
				                </div>
				                <form action="{{path('_media_edit_multiple')}}" class="dropzone form-horizontal" id="dropzone-demo">
				                	<div class="form-group">
				                		<label for="folder" class="control-label">Folder </label>
				                		<div class="col-lg-1">
				                			<input type="text" name="folder"class="form-control">
				                		</div>
				                	</div>
				                	<div class="form-group">
				                		<label for="protected" class="control-label">Is Protected </label>
				                		<div class="col-lg-1">
						                	<label class="checkbox">
										        <input type="checkbox" name="protected" value="1" id="protected"/><span></span>
										    </label>
										    <script>
										        $('#protected').bootstrapSwitch();
										    </script>
									    </div>
								    </div>
				                </form>
				              </div>
				            </div>
				          </div>
				        </div>
	      	</div>
	    </div>
	</div>

</div>


{% endblock %}